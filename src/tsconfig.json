{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "." ,
    "paths": {
      "~components/*": ["./components/*"],
      "~pages/*": ["./pages/*"],
      "~config/*": ["./config/*"],
      "~redux/*": ["./redux/*"],
      "~scss/*": ["./scss/*"],
      "~types/*": ["./types/*"],
      "~assets/*": ["./public/static/assets/*"],
      "~services/*": ["./services/*"],
      "~constants/*": ["./constants/*"]
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
